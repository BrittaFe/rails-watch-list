<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.wallpapersafari.com/13/11/MfWUsa.jpeg);">
  <div class="container">
    <p>
      <span id="banner-typed-text"></span>
    </p>
  </div>
</div>
<div class="container">
  <div class="list-flex">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <%= link_to "#{list.name}", list_path(list), class:'list-name' %>
      </div>
    <% end %>
  </div>
</div>

